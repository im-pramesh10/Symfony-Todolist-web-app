<div class="container">
	{% for item in items %}


		<div class="d-flex flex-row">
			{% if item.IsCompleted == false %}
				<div class="p-2 flex-grow-1">{{ item.getDescription }}</div>

				<button type="button" class="mark btn btn-sm btn-warning m-1" value="{{ item.getId }}">Mark Complete</button>
				<button type="button" class="delete btn btn-danger btn-sm m-1" value="{{ item.getId }}">
					<i class="material-icons">delete</i>
				</button>
			{% endif %}


		</div>
	{% endfor %}
</div>
